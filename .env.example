# SDRIG SDK Environment Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# Network Configuration
# ============================================================================

# Network interface for AVTP communication
# Find your interface: ip link show
IFACE=enp0s31f6

# AVTP Stream ID (typically 1)
STREAM_ID=1

# ============================================================================
# Device MAC Addresses
# ============================================================================

# UIO Device MAC (Universal Input/Output)
UIO_MAC=66:6A:DB:B3:06:27

# ELoad Device MAC (Electronic Load)
ELOAD_MAC=

# IfMux Device MAC (Interface Multiplexer)
IFMUX_MAC=66:6A:DB:B3:06:27

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed AVTP logging
AVTP_DEBUG=0

# Enable CAN protocol debugging
CAN_DEBUG=0

# ============================================================================
# Performance Tuning
# ============================================================================

# Module info request interval (seconds, default: 5.0)
MODULE_INFO_INTERVAL=5.0

# Message send interval for periodic updates (seconds, default: 2.0)
MESSAGE_SEND_INTERVAL=2.0

# ============================================================================
# Docker Configuration
# ============================================================================

# Container timezone (optional)
TZ=UTC

# Python unbuffered output (keep as 1 for Docker)
PYTHONUNBUFFERED=1

# ============================================================================
# Notes
# ============================================================================
# - MAC addresses should be in format: XX:XX:XX:XX:XX:XX
# - Network interface must support raw sockets and AVTP
# - Stream ID is typically 1, but check your device configuration
# - For multiple devices of same type, use different MAC addresses
